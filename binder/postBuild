#!/bin/bash
pip install bash_kernel numpy matplotlib
python -m bash_kernel.install

wget https://github.com/mrirecon/bart/archive/v0.5.00.tar.gz
tar xzvf v0.5.00.tar.gz
cd bart-0.5.00
PARALLEL=1 make

git clone https://github.com/mrphysics-bonn/spiral-pypulseq-example
cd spiral_pypulseq_bart_example/spiraltraj
python setup.py install

git clone --single-branch --branch binder_compatibility https://github.com/mavel101/pypulseq.git
cd pypulseq
python setup.py install
